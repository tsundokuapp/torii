{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AcessoEmail": {
    "Remetente": "${SMTP_REMETENTE}",
    "SmtpServer": "${SMTP_SERVER}",
    "Port": "465",
    "Password": "${SMTP_PASSWORD}",
    "SenhaAdminInicial": "${ADMIN_PASSWORD}",
    "EmailAdminInicial": "${ADMIN_EMAIL}"
  },
  "ConnectionStrings": {
    "UsuarioConnection": "${DATABASE_CONNECTION_STRING}"
  },
  "JwtConfiguration": {
    "SecretToken": "${JWT_SECRET_TOKEN}",
    "RefreshTokenValidityInMinutes": 10080,
    "SecretTokenReset": "${JWT_SECRET_TOKEN_RESET}",
    "ResetTokenValidityInMinutes": 15
  },
  "IntegrationUrlBase": {
    "UrlBaseTsundokuApi": "${INTEGRATION_URL_API:-https://localhost:8083/api/auth}",
    "UrlBaseTsundokuWeb": "${INTEGRATION_URL_WEB:-https://localhost:8083/api/auth}"
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": "${CORS_ALLOWED_ORIGINS:-http://localhost:3000,https://localhost:3000}"
  },
  "CertificateSettings": {
    "Path": "${CERTIFICATE_PATH:-/app/certs/certificado.pfx}",
    "Password": "${CERTIFICATE_PASSWORD}"
  }
}
